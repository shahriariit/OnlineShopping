@model MvcStore.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
    MvcStore.Models.UserProfile q=new MvcStore.Models.UserProfile();
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>


@section Scripts{
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
            <script type='text/javascript'>
                $(document).ready(function () {

                    $("#p1").show();
                    $("#p2").hide();
                    $("#p3").hide();
                  

                    $("#a1").click(function () {
                        $("#p1").show();
                        $("#p2").hide();
                        $("#p3").hide();
                      
                       
                    });


                    $("#a2").click(function () {
                        $("#p1").hide();
                        $("#p2").show();
                        $("#p3").hide();
                   
                       
                    });

                    $("#a3").click(function () {
                        $("#p1").hide();
                        $("#p2").hide();
                        $("#p3").show();
                      
                       
                    });

                     
                });

             </script> 
    @Scripts.Render("~/bundles/jqueryval") 
    
}

<div class="container-fluid">
    <div class="row-fluid">

        <div class="span2">
            @Html.Partial("~/Views/Account/UserMenu.cshtml")         
        </div>

        <div  class="span10"> 
            <div id="p1">
             
               <strong>UserName:</strong> @User.Identity.Name
                          
            </div> 
            <div id="p2">
                
                 @Html.Partial("AccountView");
            </div> 
            <div id="p3">
                @if (ViewBag.HasLocalPassword)
                {
                    @Html.Partial("_ChangePasswordPartial")
                }
                else
                { 
                    @Html.Partial("_SetPasswordPartial")
                }

                <section id="externalLogins">
                    @Html.Action("RemoveExternalLogins")

                    <h3>Add an external login</h3>
                    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
               
           
             
        </div> 

        
   </div>

</div>



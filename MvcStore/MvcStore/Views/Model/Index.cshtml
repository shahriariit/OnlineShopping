@model IEnumerable<MvcStore.Models.Model>

@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    <div class="row-fluid">

        <div class="span2">
            @Html.Partial("~/Views/Model/ModelMenu.cshtml")
        </div>

        <div class="span10">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            
                <table class="tablesorter">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Brand.Name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CountryOfOrigin)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Packing)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.PagePerToner)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Packing)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PagePerToner)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ModelId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ModelId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ModelId })
                            </td>
                        </tr>
                }

                </table>
        </div>
    </div>
</div>


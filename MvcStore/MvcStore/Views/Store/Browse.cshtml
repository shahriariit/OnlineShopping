@model MvcStore.Models.Brand
@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">

        <div class="span2">
            @{Html.RenderAction("BrandMenu", "Store");}
            
        </div>

        <div class="span10">

            <div>
                <br />

                <div id="modelbar">
                 <h1>@Model.Name</h1>
                    
                <script src="~/Scripts/jquery-1.7.1.js"></script>
                <script>
                    $(document).ready(function () {

                        $("#btn1").click(function () {
                            $("ul.item-list").toggleClass("item-list1");
                           
                        });
                        
                    });
                    
                  </script>
                   

                 <button class="btn btn-warning" id="btn1">List</button>

                 </div>

                <link href="~/Content/StyleCss/itemlist.css" rel="stylesheet" />


                <ul class="item-list">

                    @foreach (var item in Model.Models)
                    {
          
                        <li>

                            <a href="@Url.Action("Details", new { id = item.ModelId })">
                               <div class="info">
                                   <p><img alt="@item.ProductName" src="@item.ModelUrl"/></p>
                               </div>
                               <div class="info">
                                   <p>@item.ProductName</p>
                                   <p>@item.Price</p>
                                   <p id="y"><span>BUY NOW</span></p>  
                               </div>
                              @{
                                  Session["brandId"] = item.BrandId;
                                  Session["brandName"] = item.Brand.Name;
                               }
                            </a>

                        </li>
                    }
                </ul>

            </div> 

        </div> 

    </div>

</div>



